.container		
	.row
		.center{:style => "padding:20px 0 5px;"}
			%p{:style => "color:black;font-weight:bold"} Recent Projects
		- @ideas.each do |idea|
			.col-sm-2.center{:style => "padding-bottom:30px;"}
				= image_tag idea.image(:medium), :class => "img-rounded img-responsive"
			
				%p.center{:style => "padding-top:5px;color:#000"}= link_to "#{idea.description}",idea,:style => "color:black"
	.row
		.center{:style => "padding:20px 0 5px;"}
			%p{:style => "color:black;font-weight:bold"} Collaborators
		- @users.each do |u|
			.col-sm-2.center{:style => "padding-bottom:30px;"}
				= link_to (image_tag u.image, :class => "img-rounded img-responsive"), u.fburl, :target => "_blank"
				%p.center{:style => "padding-top:5px;"}= link_to u.name, u.fburl, :target => "_blank", :style => "color:black"
					