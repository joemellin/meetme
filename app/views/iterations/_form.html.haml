= simple_form_for([@idea, @iteration]) do |f|
	= f.error_notification

	.form-group
		= f.label :title
		= f.text_field :title
	.form-group
		= f.label :image
		= f.file_field :image, class: "form-control"
	.form-group
		= f.label :description
		= f.text_field :description
	.form-group
		= f.hidden_field :idea_id
	.form-group
		= f.submit class: "btn btn-primary"
end
